{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/plan.schema.json",
  "title": "Auditor Plan",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "plan": {
      "type": "array",
      "minItems": 0,
      "maxItems": 3,
      "items": { "$ref": "#/$defs/planItem" }
    },
    "noop": { "type": "boolean" },
    "reason": { "type": "string" }
  },
  "required": ["plan", "noop", "reason"],
  "$defs": {
    "planItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "action": { "type": "string", "minLength": 1 },
        "why": { "type": "string", "minLength": 1 },
        "filesInvolved": {
          "type": "array",
          "minItems": 0,
          "items": { "type": "string", "minLength": 1 }
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "supportiveEvidence": {
          "type": "array",
          "description": "Optional evidence items that justify or support the steps in this plan item.",
          "items": { "type": "string", "minLength": 1 }
        },
        "category": { "type": "string", "minLength": 1 },
        "risk": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH"] }
      },
      "required": [
        "action",
        "why",
        "filesInvolved",
        "steps",
        "supportiveEvidence",
        "category",
        "risk"
      ]
    }
  }
}
