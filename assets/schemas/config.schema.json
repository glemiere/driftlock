{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/config.schema.json",
  "title": "Driftlock Orchestrator Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "model": {
      "type": "string",
      "description": "Global default model for Driftlock."
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference for this config file."
    },
    "auditors": {
      "type": "object",
      "description": "Mapping from auditor name to its configuration.",
      "minProperties": 1,
      "patternProperties": {
        ".*": {
          "$ref": "#/$defs/auditorConfig"
        }
      },
      "additionalProperties": false
    },
    "validators": {
      "type": "object",
      "description": "Mapping from validator name to its source path.",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "model": {
            "type": "string"
          }
        },
        "required": ["path"],
        "additionalProperties": false
      }
    },
    "formatters": {
      "type": "object",
      "description": "Paths to formatter definitions and associated schemas.",
      "additionalProperties": false,
      "properties": {
        "plan": {
          "type": "string",
          "description": "Path to the canonical plan formatter markdown."
        },
        "schema": {
          "type": "string",
          "description": "Path to the JSON Schema used to validate plans."
        },
        "model": {
          "type": "string",
          "description": "Optional model override for formatter stage."
        }
      },
      "required": ["plan", "schema"]
    },
    "exclude": {
      "type": "array",
      "description": "List of files or folders to exclude from plans.",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["auditors", "validators", "formatters"],
  "$defs": {
    "auditorConfig": {
      "type": "object",
      "description": "Configuration for a single auditor.",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether this auditor is active in the pipeline."
        },
        "path": {
          "type": "string",
          "description": "Path to the auditor prompt or definition file."
        },
        "validators": {
          "type": "array",
          "description": "Ordered list of validator names to apply to this auditor's plans.",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "model": {
          "type": "string",
          "description": "Optional model override for this auditor."
        }
      },
      "required": ["enabled", "path", "validators"]
    }
  }
}
