{
  "$schema": "./assets/schemas/config.schema.json",
  "model": "gpt-5.2-codex",
  "reasoning": "medium",
  "qualityGate": {
    "build": { "enabled": true, "run": "npm run build" },
    "lint": { "enabled": true, "run": "npm run lint" },
    "test": { "enabled": true, "run": "npm run test" },
    "lintAutoFix": null
  },
  "runBaselineQualityGate": true,
  "maxPlanRetries": 3,
  "maxValidationRetries": 2,
  "maxRegressionAttempts": 5,
  "maxThreadLifetimeAttempts": 10,
  "turnTimeoutMs": 1200000,
  "pullRequest": {
    "enabled": true,
    "gitHostSaas": "github",
    "formatter": {
      "path": "./assets/formatters/pull-request.md",
      "schema": "./assets/schemas/pull-request.schema.json",
      "model": "gpt-5.1-codex-mini",
      "reasoning": "low"
    }
  },
  "auditors": {
    "complexity": {
      "enabled": true,
      "path": "./assets/auditors/complexity.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "consistency": {
      "enabled": true,
      "path": "./assets/auditors/consistency.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "dependency": {
      "enabled": false,
      "path": "./assets/auditors/dependency.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "documentation": {
      "enabled": false,
      "path": "./assets/auditors/documentation.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "modularity": {
      "enabled": true,
      "path": "./assets/auditors/modularity.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "performance": {
      "enabled": true,
      "path": "./assets/auditors/performance.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "quality": {
      "enabled": true,
      "path": "./assets/auditors/quality.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "reliability": {
      "enabled": true,
      "path": "./assets/auditors/reliability.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    },
    "security": {
      "enabled": true,
      "path": "./assets/auditors/security.md",
      "validators": ["plan"],
      "model": "gpt-5.2",
      "reasoning": "medium"
    }
  },
  "validators": {
    "plan": {
      "path": "./assets/validators/plan.md",
      "model": "gpt-5.1-codex-mini",
      "reasoning": "low"
    },
    "execute-step": {
      "path": "./assets/validators/execute-step.md",
      "model": "gpt-5.1-codex-mini",
      "reasoning": "low"
    },
    "step": {
      "path": "./assets/validators/step.md",
      "model": "gpt-5.1-codex-mini",
      "reasoning": "low"
    }
  },
  "formatters": {
    "plan": {
      "path": "./assets/formatters/plan.md",
      "schema": "./assets/schemas/plan.schema.json",
      "model": "gpt-5.2-codex",
      "reasoning": "low"
    },
    "executeStep": {
      "path": "./assets/formatters/execute-step.md",
      "schema": "./assets/schemas/execute-step.schema.json",
      "model": "gpt-5.2-codex",
      "fixRegressionPath": "./assets/formatters/execute-step-regression.md",
      "reasoning": "medium"
    }
  },
  "exclude": []
}
