{
  "$schema": "./assets/schemas/config.schema.json",
  "model": "gpt-5.1-codex-max",
  "qualityGate": {
    "build": { "enabled": true, "run": "npm run build" },
    "lint": { "enabled": true, "run": "npm run lint" },
    "test": { "enabled": true, "run": "npm run test" }
  },
  "runBaselineQualityGate": true,
  "maxValidationRetries": 5,
  "maxRegressionAttempts": 10,
  "maxThreadLifetimeAttempts": 30,
  "pullRequest": {
    "enabled": true,
    "formatter": {
      "path": "./assets/formatters/pull-request.md",
      "schema": "./assets/schemas/pull-request.schema.json",
      "model": "gpt-5.1-codex-mini"
    }
  },
  "auditors": {
    "complexity": {
      "enabled": true,
      "path": "./assets/auditors/complexity.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "consistency": {
      "enabled": true,
      "path": "./assets/auditors/consistency.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "dependency": {
      "enabled": false,
      "path": "./assets/auditors/dependency.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "documentation": {
      "enabled": false,
      "path": "./assets/auditors/documentation.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "modularity": {
      "enabled": true,
      "path": "./assets/auditors/modularity.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "performance": {
      "enabled": true,
      "path": "./assets/auditors/performance.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "quality": {
      "enabled": true,
      "path": "./assets/auditors/quality.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "reliability": {
      "enabled": true,
      "path": "./assets/auditors/reliability.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    },
    "security": {
      "enabled": true,
      "path": "./assets/auditors/security.md",
      "validators": ["plan"],
      "model": "gpt-5.1-codex-max"
    }
  },
  "validators": {
    "plan": { "path": "./assets/validators/plan.md", "model": "gpt-5.1-codex-max" },
    "execute-step": {
      "path": "./assets/validators/execute-step.md",
      "model": "gpt-5.1-codex-max"
    },
    "step": { "path": "./assets/validators/step.md", "model": "gpt-5.1-codex-max" }
  },
  "formatters": {
    "plan": {
      "path": "./assets/formatters/plan.md",
      "schema": "./assets/schemas/plan.schema.json",
      "model": "gpt-5.1-codex-max"
    },
    "executeStep": {
      "path": "./assets/formatters/execute-step.md",
      "schema": "./assets/schemas/execute-step.schema.json",
      "model": "gpt-5.1-codex-max"
    },
    "testFailureSummary": {
      "path": "./assets/sanitazors/quality-tests.md",
      "schema": "./assets/schemas/test-failure-summary.schema.json",
      "model": "gpt-5.1-codex-max"
    }
  },
  "exclude": []
}
