{
  "$schema": "./assets/schemas/config.schema.json",
  "model": "gpt-5.1-codex-max",
  "commands": {
    "build": "npm run build",
    "test": "npm run test",
    "lint": "npm run lint"
  },
  "commandsFailOnly": {
    "build": "",
    "test": "",
    "lint": ""
  },
  "enableBuild": true,
  "enableLint": true,
  "enableTest": true,
  "runBaselineQualityGate": true,
  "maxValidationRetries": 3,
  "maxRegressionAttempts": 5,
  "maxThreadLifetimeAttempts": 10,
  "failurePolicy": {
    "maxConsecutiveStepFailures": 1,
    "abortOnAnyStepFailure": false,
    "requireAtLeastOneStepSuccess": true
  },
  "auditors": {
    "complexity": {
      "enabled": true,
      "path": "./assets/auditors/complexity.md",
      "validators": ["plan"]
    },
    "consistency": {
      "enabled": true,
      "path": "./assets/auditors/consistency.md",
      "validators": ["plan"]
    },
    "dependency": {
      "enabled": false,
      "path": "./assets/auditors/dependency.md",
      "validators": ["plan"]
    },
    "documentation": {
      "enabled": false,
      "path": "./assets/auditors/documentation.md",
      "validators": ["plan"]
    },
    "modularity": {
      "enabled": true,
      "path": "./assets/auditors/modularity.md",
      "validators": ["plan"]
    },
    "performance": {
      "enabled": true,
      "path": "./assets/auditors/performance.md",
      "validators": ["plan"]
    },
    "quality": {
      "enabled": true,
      "path": "./assets/auditors/quality.md",
      "validators": ["plan"]
    },
    "reliability": {
      "enabled": true,
      "path": "./assets/auditors/reliability.md",
      "validators": ["plan"]
    },
    "security": {
      "enabled": true,
      "path": "./assets/auditors/security.md",
      "validators": ["plan"]
    }
  },
  "validators": {
    "plan": { "path": "./assets/validators/plan.md" },
    "execute-step": { "path": "./assets/validators/execute-step.md" },
    "step": { "path": "./assets/validators/step.md" }
  },
  "formatters": {
    "plan": "./assets/formatters/plan.md",
    "schema": "./assets/schemas/plan.schema.json"
  },
  "exclude": []
}
